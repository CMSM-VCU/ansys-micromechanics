{
    "$schema": "http://json-schema.org/schema#",
    "title": "RVE Tester Input",
    "description": "Input deck defining an RVE test case",
    "type": "object",
    "properties": {
        "caseId": {
            "description": "The unique identifier for a test case",
            "type": "integer",
            "minimum": 1
        },
        "caseDescription": {
            "description": "The description of a test case",
            "type": "string"
        },
        "units": {
            "description": "The set of units used for a test case (documentation only, no effect on simulation",
            "type": "object",
            "properties": {
                "length": {
                    "type": "string"
                },
                "mass": {
                    "type": "string"
                },
                "time": {
                    "type": "string"
                }
            },
            "required": ["length", "mass", "time"]
        },
        "loading": {
            "description": "The loading parameters for a test case",
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": ["displacement", "tensor"]
                },
                "directions": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "pattern": "^-?[123][123]$",
                        "examples": ["11", "12", "-23", "31"]
                    }
                },
                "normalMagnitude": {
                    "type": "number",
                    "description": "The magnitude of loading for all normal tests, units depending on kind"
                },
                "shearMagnitude": {
                    "type": "number",
                    "description": "The magnitude of loading for all shear tests, units depending on kind"
                },
                "tensors": {
                    "type": "array",
                    "description": "The strain tensors to be applied to the RVE in sequence",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "array",
                        "minItems": 3,
                        "maxItems": 3,
                        "items": {
                            "type": "array",
                            "minItems": 3,
                            "maxItems": 3,
                            "items": {
                                "type": "number"
                            }
                        }
                    }
                },
                "magnitudeMultiplier": {
                    "type": "number",
                    "description": "The scalar by which to multiply the strain tensors",
                    "default": 1
                },
                "labels": {
                    "type": "array",
                    "description": "Optional labels corresponding with each load case. Must be same number of labels as load cases",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "oneOf": [
                {
                    "properties": { "kind": { "enum": ["displacement"] } },
                    "required": [
                        "kind",
                        "directions",
                        "normalMagnitude",
                        "shearMagnitude"
                    ]
                },
                {
                    "properties": { "kind": { "enum": ["tensor"] } },
                    "required": ["kind", "tensors", "magnitudeMultiplier"]
                }
            ]
        },
        "materials": {
            "description": "The list of materials and their properties",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "materialIndex": {
                        "description": "The index number for a material",
                        "type": "integer",
                        "minimum": 1
                    },
                    "materialName": {
                        "description": "The name of a material (documentation only, no effect on simulation",
                        "type": "string"
                    },
                    "materialType": {
                        "description": "The directionality of a material",
                        "type": "string",
                        "enum": ["isotropic", "orthotropic", "anisotropic"]
                    },
                    "elasticModuli": {
                        "description": "The elastic moduli of a material in the three principal directions",
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "exclusiveMinimum": 0.0
                    },
                    "shearModuli": {
                        "description": "The shear moduli of a material in the three principal planes: 1-2, 2-3, 3-1",
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "exclusiveMinimum": 0.0
                    },
                    "poissonsRatios": {
                        "description": "The poisson's ratios of a material in the three principal planes: 1-2, 2-3, 3-1",
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minimum": -1.0,
                        "maximum": 0.5
                    },
                    "density": {
                        "description": "The volumetric density of a material. Only used in PD cases (currently).",
                        "type": "number",
                        "exclusiveMinimum": 0.0
                    }
                },
                "oneOf": [
                    {
                        "properties": {
                            "materialType": { "enum": ["isotropic"] },
                            "elasticModuli": {
                                "minItems": 1,
                                "maxItems": 1
                            },
                            "poissonsRatios": {
                                "minItems": 1,
                                "maxItems": 1
                            },
                            "shearModuli": false
                        },
                        "required": [
                            "materialIndex",
                            "materialName",
                            "materialType",
                            "elasticModuli",
                            "poissonsRatios"
                        ]
                    },
                    {
                        "properties": {
                            "materialType": { "enum": ["orthotropic"] },
                            "elasticModuli": {
                                "minItems": 3,
                                "maxItems": 3
                            },
                            "shearModuli": {
                                "minItems": 3,
                                "maxItems": 3
                            },
                            "poissonsRatios": {
                                "minItems": 3,
                                "maxItems": 3
                            }
                        },
                        "required": [
                            "materialIndex",
                            "materialName",
                            "materialType",
                            "elasticModuli",
                            "shearModuli",
                            "poissonsRatios"
                        ]
                    }
                ]
            },
            "minItems": 1
        },
        "mesh": {
            "description": "The data defining the RVE mesh",
            "type": "object",
            "properties": {
                "domainSideLength": {
                    "type": "number",
                    "description": "The side length of the cubic domain, centered on the origin"
                },
                "elementSpacing": {
                    "type": "number",
                    "description": "The element edge length in FEA cases, the grid spacing in PD cases",
                    "exclusiveMinimum": 0.0
                },
                "locationsWithId": {
                    "description": "The locations ordered as [xloc, yloc, zloc, materialIndex]",
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": [
                            {
                                "type": "number",
                                "description": "x coordinate"
                            },
                            {
                                "type": "number",
                                "description": "y coordinate"
                            },
                            {
                                "type": "number",
                                "description": "z coordinate"
                            },
                            {
                                "type": "integer",
                                "description": "Material index",
                                "minimum": 1
                            }
                        ],
                        "minItems": 4,
                        "additionalItems": false
                    },
                    "minItems": 0
                },
                "elementType": {
                    "type": "string",
                    "description": "The element type to use in the mesh",
                    "default": "SOLID185"
                },
                "nodeFileRelativePath": {
                    "type": "string",
                    "description": "The path to the file containing node data (relative to this input file)"
                },
                "elementFileRelativePath": {
                    "type": "string",
                    "description": "The path to the file containing element data (relative to this input file)"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "domainSideLength",
                        "elementSpacing",
                        "locationsWithId"
                    ]
                },
                {
                    "required": [
                        "elementType",
                        "nodeFileRelativePath",
                        "elementFileRelativePath"
                    ]
                }
            ]
        }
    },
    "required": ["caseId", "caseDescription", "units", "loading", "materials", "mesh"]
}
